// 4.No. is odd or even without using modulo operator
#include<stdio.h>
int main()
{
    int x;
    printf("enter a number:");
    scanf("%d",&x);
    if(x&1)
    {
        printf("no is odd");
    }
    else
    printf("no is even");
}
//5.Check whether no is three digit or not
