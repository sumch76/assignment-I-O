//1.check whether no is positive or non-positive
#include<stdio.h>
int main()
{
int x;
printf("Enter a number\n");
scanf("%d",&x);
if(x>=0)
{
printf("No is Positive");
}
else
{
printf("No is non Positive");
}
} 

