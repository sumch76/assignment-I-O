//15.Check whether no is negative , positive,or zero
    
#include<stdio.h>
int main()
{
    int x;
    printf("Enter a number\n");
    scanf("%d",&x);
    if(x>0)
        printf("no is positive");
    else if(x<0)
        printf("No is negative");
    else
        printf("Zero");
}
//16.Check whether alphabet is lower case ,an upper case a digit , a special case

#include<stdio.h>
int main()
{
    char c;
    printf("Emter a Alphabet\n");
    scanf("%c",&c);

    if(c>=65&&c<=90)
    {

        printf("Uppercase");
    }
    else if(c>=97&&c<=122)
    {
        printf("Lowercase");
     
    }
    else if(c>=48&&c<=57)
    {
    printf("Digit");
    }
    else
{
     printf("special case");
    }
    
}

//17.enter three sides of triangle and display triangle is valid or not
#include<stdio.h>
int main()
{
    int a,b,c;
    printf("Enter three numbers:\n");
    scanf("%d%d%d",&a,&b,&c);
    if(a+b>c&&b+c>a&&c+a>b)
    printf("Traingle is valid");
    else
    printf("triangle ks invalid");
}
    


    


    



//18.enter a month no and display days in a month
#include<stdio.h>
int main()
{
   int m;
   printf("Input Month No : ");
   scanf("%d",&m);
   switch(m)
   {
	case 1:
	case 3:
	case 5:
	case 7:
	case 8:
	case 10:
	case 12:
	       printf("Month have 31 days. \n");
	       break;
	case 2:
	       printf("The 2nd month is a February and have 28 days. \n");
	       printf("in leap year The February month  Have 29 days.\n");
	       break;
	case 4:
	case 6:
	case 9:
	case 11:
	       printf("Month have 30 days. \n");
	       break;
default:
	       printf("invalid Month number.\n");
	       break;
      }
}



