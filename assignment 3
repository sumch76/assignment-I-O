    printf("Enter a number\n");
    scanf("%d",&x);
    if(x>99&&x<1000)
    {
        printf("Number is three digit ");
    }
    else
    {

        printf("Number is not three digit");
    }
}
//6.Write a program to print greater between two numbers. Print one number of both are
the same.
#include<stdio.h>
int main()
{
int x,y;
printf("enter two numbers\n");
scanf("%d %d",&x,&y);
if(x>y)
printf("%d is greater",x);
else
printf("%d is greater",y);
}
//7.quadratic equation
#include<stdio.h>
int main()
{
    int a,b,c;
    disc=b*b-4*a*c;
    printf("Enter three  digit:\n");
    scanf("%d%d%d,&a,&b,&c");
    if(disc>0)
    printf("quadratic equations are real and distinct");
    if(disc=0)
    printf("quadratic equations are equal");
    else
    print("quadratic equation is imaginary")
    
}

//8.CHECK A YEAR IS LEAP YEAR OR NOT
#include<stdio.h>
int main()
    {
        int x;
        printf("ENTER A YEAR:");
        scanf("%d",&x);

        if(x%400==0)
        printf("%d is leap year",x);
    
        else if(x%100==0)
        printf("%d is non leap year",x);

        else if(x%4==0)
        printf("%d is leap year",x);
        
        else
        printf("%d is not a leap year",x);

    }

  //9.Write a program to find the greatest among three given numbers. Print number once
if the greatest number appears two or three times.


#include<stdio.h>
int main()
{
    int x,y,z;
    printf("Enter three numbers:\n");
    scanf("%d %d %d",&x,&y,&z);
     
     if(x>y)
     {
        if(x>y)
        printf("%d is greater",x);
        else
        printf("%d is greater",z);
     }
     else
     {
        if(y>z)
        {
            printf("%d is greater",y);
        
        }
        else
        printf("%d is greater", z);
     }
    
}

//10.calculate the profit and loss percentage by entering the sp and cp
include<stdio.h>
int main()
{
    float sp ,cp;
    printf("enter CP and SP\n");
    scanf("%f %f",&cp,&sp);
    if(sp==cp)
    printf("no profit and loss percentage");
    else
    {
    if(sp>cp)
    printf("the profit percentage is %0.2f",(sp-cp)/cp*100);
    else
    printf("the loss percentage is %0.2f",(cp-sp)/cp*100);
    }
}
//12.Check whether alphabet is lower case or upper casel
#include<stdio.h>
int main()
{
    char c;
    printf("Emter a Alphabet\n");
    scanf("%c",&c);

    if(c>=65&&c<=90)
    {

        printf("Uppercase");
    }
    else if(c>=97&&c<=122)
    {
        printf("Lowercase");
    }

